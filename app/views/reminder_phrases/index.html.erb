<table class="table table-hover">
  <tr>
    <th>Phrase</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reminder_phrases.each do |reminder_phrase| %>
  <tr>
    <td><%= reminder_phrase.phrase %></td>
    <td><%= link_to 'Show', reminder_phrase %></td>
    <td><%= link_to 'Edit', edit_reminder_phrase_path(reminder_phrase) %></td>
